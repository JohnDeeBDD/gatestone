&lt;div id=&quot;print_content&quot;&gt;&lt;h1 itemprop=&quot;name headline&quot; style=&quot;padding-top:0; padding-bottom:0; margin-top:0; margin-bottom:5px;&quot;&gt;New Threats To Free Speech&lt;/h1&gt;

&lt;div class=&quot;byline&quot;&gt;

&lt;p class=&quot;sans-serif&quot; style=&quot;margin:10px 0 0 0;&quot;&gt;&lt;b&gt;
by &lt;a href=&quot;https://www.gatestoneinstitute.org/author/Geert+Wilders&quot;&gt;&lt;span itemprop=&quot;author&quot;&gt;Geert Wilders&lt;/span&gt;&lt;/a&gt;&lt;br&gt;
&lt;time class=&quot;nocontent&quot; datetime=&quot;2008-10-27T06:30:00&quot; itemprop=&quot;datePublished&quot;&gt;October 27, 2008 at 6:30 am&lt;/time&gt;&lt;/b&gt;&lt;/p&gt;

&lt;p class=&quot;nocontent no_mobile&quot; style=&quot;margin:0 0 10px 0;&quot;&gt;&lt;b&gt;&lt;a href=&quot;https://www.gatestoneinstitute.org/23/new-threats-to-free-speech&quot;&gt;https://www.gatestoneinstitute.org/23/new-threats-to-free-speech&lt;/a&gt;&lt;/b&gt;&lt;/p&gt;

&lt;/div&gt;

&lt;/div&gt;

&lt;!-- PLAINTEXT STRIP BEGIN --&gt;
&lt;table id=&quot;links&quot; cellpadding=&quot;0&quot; cellspacing=&quot;0&quot; border=&quot;0&quot; class=&quot;no_print nocontent&quot; style=&quot;border-bottom:1px solid gray; margin:10px 0 5px 0;&quot;&gt;
&lt;tr&gt;&lt;td style=&quot;min-width:20px; white-space:nowrap; vertical-align:top; padding:3px 5px 0 5px; font-family:arial; font-size:12px; text-decoration:none; color:#525252; white-space:nowrap !important;&quot;&gt;&lt;a href=&quot;mailto:?subject=New%20Threats%20To%20Free%20Speech&amp;body=https%3A%2F%2Fwww.gatestoneinstitute.org%2F23%2Fnew-threats-to-free-speech&quot; title=&quot;Send&quot;&gt;&lt;img src=&quot;https://www.gatestoneinstitute.org/images/icons/item_send_24.png&quot; width=&quot;20&quot; border=&quot;0&quot; class=&quot;no_css_sizing&quot; style=&quot;margin:0px 2px 2px 0px;&quot; alt=&quot;Send&quot;&gt;&lt;/a&gt;&lt;/td&gt;
